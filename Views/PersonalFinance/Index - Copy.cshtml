@model ViewModel

<h2>Historic List</h2>
<br />
<br />

<div class="table-responsive-xl">
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Date - Time</th>
                <th scope="col">Min °C</th>
                <th scope="col">Min °F</th>
                <th scope="col">Max °C</th>
                <th scope="col">Max °F</th>
                <th scope="col">Weather</th>
                <th scope="col">City</th>
                <th scope="col">Province</th>
                <th scope="col">Region</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-warning">
                @using (Html.BeginForm("Index", "TempDetections", FormMethod.Get))
                {
                    <td>Filters:</td>
                    <td>
                        @Html.DropDownList("SelectedDate",
                 new SelectList(Model.UniqueData.UniqueDate, "Value", "Text", "Model.UniqueData.UniqueDate"),
                 "All", new { onchange = "form.submit();" })
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        @Html.DropDownList("SelectedCity",
                 new SelectList(Model.UniqueData.UniqueCity, "Value", "Text", "Model.UniqueData.UniqueCity"),
                 "All", new { onchange = "form.submit();" })
                    </td>
                    <td>
                        @Html.DropDownList("SelectedProvince",
                 new SelectList(Model.UniqueData.UniqueProvince, "Value", "Text", "Model.UniqueData.UniqueProvince"),
                 "All", new { onchange = "form.submit();" })
                    </td>
                    <td>
                        @Html.DropDownList("SelectedRegion",
                 new SelectList(Model.UniqueData.UniqueRegion, "Value", "Text", "Model.UniqueData.UniqueRegion"),
                 "All", new { onchange = "form.submit();" })
                    </td>
                    <td></td>
                }
            </tr>
            @foreach (var item in Model.Transactions)
            {
        <tr>
            <td>@item.ID</td>
            <td>@item.TrsCode</td>
            <td>@item.TrsTitle</td>
            <td>@item.TrsDateTime</td>
            <td>@item.TrsValue</td>
            <td>@item.TrsNote</td>
            <td style='white-space: nowrap'>
                <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-1">
        <a asp-action="Create" class="btn btn-success">Add</a>
    </div>
    <div class="col-10"></div>
    <div class="col-1" style='white-space: nowrap'>
        @if (ViewBag.Page > 0)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.Page - 1 })" class="btn btn-outline-primary">Previous</a>
        }
        @if (ViewBag.Page < ViewBag.MaxPage)
        {
            <a href="@Url.Action("Index", new { page = ViewBag.Page + 1 })" class="btn btn-outline-primary">Next</a>
        }
    </div>
</div>
