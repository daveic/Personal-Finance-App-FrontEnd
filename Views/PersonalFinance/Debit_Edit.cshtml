@model WeatherReportsFrontEnd.Models.Debit



<form asp-action="Debit_Edit" style="margin: 0 auto;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" />
        <div class="form-row">
            <h4>Modifica credito con ID: @Model.ID</h4>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="DebCode">Codice Debito</label>
                <input type="text" class="form-control" asp-for="DebCode" style="background-color: #444">
                <span asp-validation-for="DebCode" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="DebTitle">Titolo</label>
                <input type="text" class="form-control" asp-for="DebTitle" style="background-color: #444">
                <span asp-validation-for="DebTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="CredName">Creditore</label>
                <input type="text" class="form-control" asp-for="CredName" style="background-color: #444">
                <span asp-validation-for="CredName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="DebValue">Importo</label>
                <input type="text" class="form-control" asp-for="DebValue" placeholder="€" style="background-color: #444">
                <span asp-validation-for="DebValue" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="DebDateTime">Data scadenza</label>
                <input type="date" class="form-control" asp-for="DebDateTime" style="background-color: #444">
                <span asp-validation-for="DebDateTime" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="DebInsDate">Data inserimento</label>
                <input type="date" class="form-control" asp-for="DebInsDate" style="background-color: #444">
                <span asp-validation-for="DebInsDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="recipient-name" class="col-form-label" asp-for="RtNum">N° di rate totali</label>
                <input type="text" class="form-control" asp-for="RtNum" style="background-color: #444">
                <span asp-validation-for="RtNum" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="recipient-name" class="col-form-label" asp-for="RtPaid">N° di rate pagate</label>
                <input type="text" class="form-control" asp-for="RtPaid" style="background-color: #444">
                <span asp-validation-for="RtPaid" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="recipient-name" class="col-form-label" asp-for="RemainToPay">Importo Residuo</label>
                <input type="text" class="form-control" asp-for="RemainToPay" style="background-color: #444">
                <span asp-validation-for="RemainToPay" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label for="message-text" class="col-form-label" asp-for="DebNote">Note:</label>
                <textarea class="form-control" id="message-text" asp-for="DebNote" style="background-color: #444"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            <button type="submit" class="btn btn-primary" style="background-color: #2574A9">Aggiorna</button>
        </div>
    </div>
</form>