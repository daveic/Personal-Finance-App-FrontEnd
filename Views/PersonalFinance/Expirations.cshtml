@model ViewModel

<h2>Scadenze</h2>
<br />


<!-- Modal ADD-->
<div class="row" style="margin: 0 auto;">
    <div class="col-md-4">
        <div class="card shadow p-3 border-light mb-3" style="margin: 0 auto;">
            <div class="card-header">NUOVA SCADENZA</div>
            <div class="card-body">
                <partial name="Expiration_Add" model="Model.Expiration" />
            </div>
        </div>
    </div>
    <div class="col-md-8">

        <div class="card shadow p-3 border-light mb-3" style="margin: 0 auto;">
            <div class="card-header">CALENDARIO</div>
            <div class="card-body">
                <div class="cards">
                    @foreach (var month in ViewBag.UniqueMonth)
                    {
                        <div class="card shadow p-3 border-dark mb-3" style="margin: 0 auto;">
                            <div class="card-header"><h5>@month.ToString()</h5></div>
                            <div class="card-body">
                                @foreach (var exp in Model.ExpirationList)
                                {
                                    if (exp.Month.ToString() == month.ToString())
                                    {
                                        <div class="row">
                                            <div class="card shadow p-3 border-dark mb-3" style="margin: 0 auto;">
                                                <div class="card-header"><h5>@exp.Month.ToString()</h5></div>
                                                <div class="card-body">
                                                    prova
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }



                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>