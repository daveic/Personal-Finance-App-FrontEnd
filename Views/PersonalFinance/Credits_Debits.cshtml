@model ViewModel

<div class="row" style="margin: 0 auto;">
    <div class="col-md-12">
        <div class="card shadow p-3 border-dark mb-3" style="margin: 0 auto; text-align: end; background: url(https://i.postimg.cc/853DKzC6/prova-barra-01.png); background-size: cover;">
            <p style="font-size:xx-large; margin-bottom: auto;">Panoramica - Crediti e Debiti</p>
        </div>
    </div>
</div>
<br />
<div class="row" style="margin: 0 auto;">
    <div class="col-md-5">
        <div class="row">
            <div class="col-sm-10"><h3>Crediti</h3></div>
            <div class="col-sm-2">
                <a class="btn btn-primary btn-sm" asp-action="Credits" style="margin-left: -28px; display: inline-flex; background-color: #2574A9">
                    Aggiorna &nbsp;
                    <span class="material-icons" style="padding-right: 0px; font-size: 20px; line-height: 0.9">
                        edit
                    </span> 
                </a>
            </div>
        </div>
        <div class="card shadow p-3 border-success mb-3">
            <div class="card-body">
                <div class="table-responsive-xl">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Codice Credito</th>
                                <th scope="col">Titolo</th>
                                <th scope="col">Debitore</th>
                                <th scope="col">Importo</th>
                                <th scope="col">Data inizio</th>
                                <th scope="col">Note</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Credits)
                            {
                                <tr>
                                    <td>@item.CredCode</td>
                                    <td>@item.CredTitle</td>
                                    <td>@item.DebName</td>
                                    <td>@item.CredValue.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-es"))</td>
                                    <td>@item.CredDateTime.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (@item.CredNote != null && @item.CredNote.Length > 5 )
                                        {
                                            @(item.CredNote.Substring(0, 5) + " ...")
                                        }
                                        else
                                        {@item.CredNote}
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="row">
            <div class="col-sm-10"><h3>Debiti</h3></div>
            <div class="col-sm-2">
                <a class="btn btn-primary btn-sm" asp-action="Debits" style="margin-left: -20px; display: inline-flex; background-color: #2574A9">
                    Aggiorna &nbsp;
                    <span class="material-icons" style="padding-right: 0px; font-size: 20px; line-height: 0.9">
                        edit
                    </span>
                </a>
            </div>
            <div class="card shadow p-3 border-danger mb-3">
                <div class="card-body">
                    <div class="table-responsive-xl">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Codice Debito</th>
                                    <th scope="col">Titolo</th>
                                    <th scope="col">Creditore</th>
                                    <th scope="col">Importo</th>
                                    <th scope="col">Data scadenza</th>
                                    <th scope="col">Note</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Debits)
                                {
                                    <tr>
                                        <td>@item.DebCode</td>
                                        <td>@item.DebTitle</td>
                                        <td>@item.CredName</td>
                                        <td>@item.DebValue.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("es-es"))</td>
                                        <td>@item.DebDateTime.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (@item.DebNote != null && @item.DebNote.Length > 5 )
                                            {
                                                @(item.DebNote.Substring(0, 5) + " ...")
                                            }
                                            else
                                            {@item.DebNote}
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card shadow p-3 border-dark mb-3" style="margin: 0 auto;">
            <div class="card-header">CREDITI/DEBITI</div>
            <div class="card-body">
                <h4 class="card-title">Come funziona?</h4>
                <p class="card-text" align="justify">
                    Nelle tabelle a lato sono elencati i crediti e debiti da ricevere o da restituire.<br />
                    Troverai i tuoi prestiti, rimborsi e pagamenti rateizzati come i finanziamenti.
                </p>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script>        
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip({ 'placement': 'right' });
        });
    </script>
}