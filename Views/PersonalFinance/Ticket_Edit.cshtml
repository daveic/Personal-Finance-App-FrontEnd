@model WeatherReportsFrontEnd.Models.Ticket




<form asp-action="Ticket_Edit" style="margin: 0 auto;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" />
        <div class="form-row">
            <h4>Modifica ticket con ID: @Model.ID</h4>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="TicketName">Gestore</label>
                <input type="text" class="form-control" asp-for="TicketName" style="background-color: #444">
                <span asp-validation-for="TicketName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="NumTicket">N° ticket attuale</label>
                <input type="number" class="form-control" asp-for="NumTicket" style="background-color: #444">
                <span asp-validation-for="NumTicket" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label for="recipient-name" class="col-form-label" asp-for="TicketValue">Valore ticket</label>
                <input type="text" class="form-control" asp-for="TicketValue" style="background-color: #444">
                <span asp-validation-for="TicketValue" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label for="message-text" class="col-form-label" asp-for="TicketNote">Note:</label>
                <textarea class="form-control" id="message-text" asp-for="TicketNote" style="background-color: #444"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            <button type="submit" class="btn btn-primary" style="background-color: #2574A9">Aggiorna</button>
        </div>
    </div>
</form>














