@model PersonalFinanceFrontEnd.Models.Deposit


<form asp-action="Deposit_Edit" style="margin: 0 auto;">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-body">
        <input type="hidden" asp-for="ID" />
        <div class="form-row">
            <h4>Modifica deposito</h4>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="BankName">Banca</label>
                <input type="text" class="form-control" asp-for="BankName" style="background-color: #444">
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="recipient-name" class="col-form-label" asp-for="input_value">Risparmio attuale</label>
                <input type="text" class="form-control" asp-for="input_value" style="background-color: #444">
                <span asp-validation-for="input_value" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label for="recipient-name" class="col-form-label" asp-for="PercGrow">% maturazione</label>
                <input type="text" class="form-control" asp-for="PercGrow" style="background-color: #444">
                <span asp-validation-for="PercGrow" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="InitDate">Data inizio</label>
                <input type="date" class="form-control" asp-for="InitDate" style="background-color: #444">
                <span asp-validation-for="InitDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="recipient-name" class="col-form-label" asp-for="EndDate">Data fine</label>
                <input type="date" class="form-control" asp-for="EndDate" style="background-color: #444">
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <label for="message-text" class="col-form-label" asp-for="BankNote">Note:</label>
                <textarea class="form-control" id="message-text" asp-for="BankNote" style="background-color: #444"></textarea>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" data-bs-dismiss="modal">Chiudi</button>
            <button type="submit" class="btn btn-primary" style="background-color: #2574A9">Aggiorna</button>
        </div>
    </div>
</form>