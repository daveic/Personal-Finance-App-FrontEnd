<!DOCTYPE html>
<!--<html lang="en">-->
<system.web>

    <!--<globalization uiCulture="it" culture="it-IT" />-->
</system.web>
<configuration>
    <system.web>
        <globalization uiCulture="it-IT" culture="it-IT" responseEncoding="utf-8" enableClientBasedCulture="true"/>
    </system.web>
</configuration>
<head>
    <link href="@Url.Content("~/content/main.css")" rel="stylesheet" type="text/css" />

    @RenderSection("Styles", false)
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    @RenderSection("scripts", required: false)


    <meta charset="utf-16" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PersonalFinance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    @{

    }
    <style>
        a {
            text-decoration: none;
        }
    </style>
    <div class="sidebar-container">

        <div class="sidebar-logo">
            pfa - wallet
        </div>

        <ul class="sidebar-navigation">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="header">

                    Benvenuto, @ViewBag.Name

                </li>
            }
            <li>
                <a href="/PersonalFinance/Index">
                    <i aria-hidden="true">
                        <span style="vertical-align:sub" class="material-icons">space_dashboard</span>
                    </i>&nbsp;&nbsp;Dashboard
                </a>
            </li>
            <li>
                <a href="/PersonalFinance/Transactions">
                    <i aria-hidden="true">
                        <span style="vertical-align:sub" class="material-icons">history</span>
                    </i>&nbsp;&nbsp;Archivio Transazioni
                </a>
            </li>
            <!-- Dropdown-->
            <li class="panel panel-default" id="dropdown">
                <a data-toggle="collapse" href="#dropdown-lvl1">
                    <i>
                        <span style="vertical-align:sub" class="material-icons">
                            segment
                        </span>
                    </i>&nbsp;&nbsp;Crediti e Debiti
                    <span class="caret"></span>
                </a>
                <!-- Dropdown level 1 -->
                <div id="dropdown-lvl1" class="panel-collapse collapse">
                    <div class="panel-body">
                        <ul class="nav navbar-nav">
                            <li><a href="/PersonalFinance/Credits_Debits"><i aria-hidden="true"><span style="vertical-align:sub" class="material-icons">savings</span></i>&nbsp;&nbsp;Panoramica</a></li>
                            <li><a href="/PersonalFinance/Credits"><i aria-hidden="true"><span style="vertical-align:sub" class="material-icons">thumb_up_alt</span></i>&nbsp;&nbsp;Crediti</a></li>
                            <li><a href="/PersonalFinance/Debits"><i aria-hidden="true"><span style="vertical-align:sub" class="material-icons">thumb_down_alt</span></i>&nbsp;&nbsp; Debiti</a></li>
                        </ul>
                    </div>
                </div>
            </li>
            <li>
                <a href="/PersonalFinance/KnownMovements">
                    <i aria-hidden="true">
                        <span style="vertical-align:sub" class="material-icons">swap_horiz</span>
                    </i>&nbsp;&nbsp;Movimenti fissi
                </a>
            </li>
            <li>

                <a href="/PersonalFinance/Wallet">
                    <h6>
                        <i aria-hidden="true">
                            <span style="vertical-align:sub" class="material-icons">account_balance_wallet</span>
                        </i>&nbsp;&nbsp;Wallet
                    </h6>
                </a>

            </li>
            <li>
                <a href="#">
                    <i aria-hidden="true">
                        <span style="vertical-align:sub" class="material-icons">trending_up</span>
                    </i>&nbsp;&nbsp;Previsioni - Budget
                </a>
            </li>
        </ul>

    </div>

    <div class="content-container">

        <div class="container-fluid">

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
                @RenderBody()
            </div>

        </div>
    </div>


    <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap-switch-button@1.1.0/css/bootstrap-switch-button.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.27.0/moment.min.js" integrity="sha512-rmZcZsyhe0/MAjquhTgiUcb4d9knaFc7b5xAfju483gbEXTkeJRUMIPk6s3ySZMYUHEcjKbjLjyddGWMrNEvZg==" crossorigin="anonymous"></script>
    <script src='https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js'></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/jsindex.js" asp-append-version="true"></script>

    <footer class="footer text-muted" style="bottom: 0;position: fixed;width: 14vw;">
        <div class="container">
            &copy; 2022 - Personal Finance App
        </div>
    </footer>
</body>

</html>

